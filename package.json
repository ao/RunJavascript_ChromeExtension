{
  "name": "run-javascript-chrome-extension",
  "version": "5.1.0",
  "description": "Run custom Javascript, each time you visit a website",
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "build": "bun run build:js && bun run build:css && bun run build:html && bun run build:assets",
    "build:js": "bun build src/*.js --outdir dist",
    "build:css": "bun run src/build/css.js",
    "build:html": "bun run src/build/html.js",
    "build:assets": "bun run src/build/assets.js",
    "package": "bun run src/build/package.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "dev": "bun run src/build/dev.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jsdom": "^21.1.6",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "sinon-chrome": "^3.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,html,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "author": "",
  "license": "MIT"
}
